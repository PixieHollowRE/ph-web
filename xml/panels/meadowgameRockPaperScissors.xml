	<copy>
		<!-- lobby panel title -->
		<title>Rock, Paper, Scissors</title>

		<!-- UI: INSTRUCTIONS -->
		<inst_screen_title target="instructions.title.heading">Instructions</inst_screen_title>
		<instruction0 target="instructions.btnContainer.page0.label">Choose either Rock, Paper or Scissors.</instruction0>
		<instruction1 target="instructions.btnContainer.page1.label">You are playing against Rochelle only - players can team up or go it alone to earn bonus points.</instruction1>
		<instruction2 target="instructions.btnContainer.page2.label">You can change your choice as many times as you like before the time runs out.</instruction2>
		<instruction3 target="instructions.btnContainer.page3.label">To win - Rock breaks Scissors, Scissors cut Paper and Paper covers Rock.</instruction3>		

		<!-- abort message -->
		<abort1>Sorry! The party host has left the game.</abort1>
		<abort2>Sorry!  There are not enough players to continue the game.</abort2>
		
		<leftGame>Left Game</leftGame>

		<winner>WINNER!</winner>	
		<gameoverHeader>Game Over</gameoverHeader>
		<gameoverBodyBelowMinimum>Sorry! A player has left the game. There are not enough players to continue the game.</gameoverBodyBelowMinimum>		
