		<conclusionLose_2>No one beat me that time!</conclusionLose_2>
		<conclusionLose_3>No one won that time!</conclusionLose_3>


		<!-- old comments -->
		<!-- comments (player won) -->
		<won_1>Great pick!</won_1>
		<won_2>Great job!</won_2>
		<won_3>You picked a winner!</won_3>
		<won_4>Awesome pick!</won_4>
		
		<!-- comments (player tie) -->
		<tie_1>It's a tie!</tie_1>
		<tie_2>We picked the same thing!</tie_2>
		<tie_3>We tied!</tie_3>
		
		<!-- comments (player lost) -->
		<lost_1>Better luck next time!</lost_1>
		<lost_2>I won that round.</lost_2>
		<lost_3>Looks like I won this time.</lost_3>
		<lost_4>I won this time.</lost_4>
		
		<!-- lose/tie/win -->
		<losetext>Lose</losetext>
		<tietext>Tie!</tietext>
		<wintext>Win!</wintext>

		<!-- game end hud -->
		<stepComplete>Step Complete!</stepComplete>
		<continue>Continue</continue>
