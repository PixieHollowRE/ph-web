		<!--
		<change target="change_btn.text">Change your other Account Settings</change>
		<member target="member_btn.text">Become a Member</member>
		<speedchatplus target="speedchatplus_btn.text">Request SpeedChat Plus</speedchatplus>
		-->
		<change>Other Account Settings</change>
		<becomeMember>Purchase Options</becomeMember>
		<isMember>Purchase Options</isMember>
		<speedchatplus>Request SpeedChat Plus</speedchatplus>
